<h1>Dashboard</h1>

<div class="sidebar">
  <%= form_for @text_shout do |form| %>
    <%= form.text_field :body, placeholder: "Shout here" %>
    <%= form.submit "Shout!" %>
  <% end %>

  <%= form_for @photo_shout do |form| %>
	  <%= form.file_field :photo %>
	  <%= form.submit "PhotoShout!" %>
<% end %>
</div>

<div class="timeline">
  <h2>Shouts</h2>
  <% @shouts.each do |shout| %>
    <div class="shout">
      <%= shout.user.email %> shouted
      <%= render shout.content %>
      <div class="time"><%= time_ago_in_words(shout.created_at) %> ago</div>
    </div>
  <% end %>
</div>